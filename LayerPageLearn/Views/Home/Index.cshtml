@using PresentationLayer.Models;
@model List<DirectoryViewModel>


<div class="row">
    <div class="col-md-12">
        <ul>
            @foreach (var item in Model)
            {
                <li>
                    <h2>@item.Directory.Title</h2>
                    <ul>
                        @if (item.Materials != null)
                        {
                            foreach (var subItem  in item.Materials)
                            {
                                <li>@subItem.Material.Title</li>
                            }

                        }

                    </ul>
                </li>
            }

        </ul>
    </div>
</div>